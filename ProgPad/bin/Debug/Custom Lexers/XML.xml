                <Style Name="TAGUNKNOWN" ForeColor="DarkRed"/>
                <Style Name="ATTRIBUTE"/>
                <Style Name="ATTRIBUTEUNKNOWN"/>
                <Style Name="NUMBER"/>
                <Style Name="DOUBLESTRING" ForeColor="Blue"/>
                <Style Name="SINGLESTRING" ForeColor="Blue"/>
                <Style Name="OTHER"/>
                <Style Name="COMMENT"/>
                <Style Name="ENTITY"/>
                <Style Name="TAGEND"/>
                <Style Name="XMLSTART"/>
                <Style Name="XMLEND"/>
                <Style Name="SCRIPT"/>
                <Style Name="ASP"/>
                <Style Name="ASPAT"/>
                <Style Name="CDATA"/>
                <Style Name="QUESTION"/>
                <Style Name="VALUE"/>
